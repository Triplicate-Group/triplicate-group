---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Triplicate Group',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      { text: 'Learn More', href: '#features' },
      { text: "Let's Talk!", href: '#lets-talk', variant: 'primary', },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Triplicate Group
    </Fragment>

    <Fragment slot="subtitle">
      Co-founded by Cayden Sommer and Evan Harmon to make technology work better for entrepreneurs and small businesses
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="What we're about"
    subtitle="We're passionate about helping entrepreneurs, startups, and small business owners utilize technology in a way that actually solves problems instead of just adding to the already complex business and technology landscape."
    items={[
      {
        title: 'Technology and Business Consulting',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Software Development',
        icon: 'tabler:components',
      },
      {
        title: 'Digital Marketing & Sales',
        icon: 'tabler:list-check',
      },
      {
        title: 'Website Development',
        icon: 'tabler:rocket',
      },
      {
        title: 'DevOps Transformation',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Cloud & Self-Hosting',
        icon: 'tabler:bulb',
      },
      {
        title: 'Tech Support',
        icon: 'tabler:bulb',
      },
      {
        title: 'Training & Education',
        icon: 'tabler:bulb',
      },
      {
        title: 'AI',
        icon: 'tabler:bulb',
      },
      {
        title: 'Automation',
        icon: 'tabler:bulb',
      },
      {
        title: 'Project Management, Agile, and LEAN Methodologies',
        icon: 'tabler:bulb',
      },
      {
        title: 'Zoho Implementations',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    id="lets-talk"
    actions={[
      { text: 'Contact Us', href: '/contact', variant: 'primary', },
      { text: 'Meet With Us', href: 'https://fantastical.app/evanharmon' },
    ]}
  >
    <Fragment slot="title"> Let's Talk! </Fragment>
  </CallToAction>
</Layout>
